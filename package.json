{
  "name": "express-async-super",
  "version": "1.0.0",
  "description": "Intelligent global async error handling for Express.js - eliminates the need for manual try/catch blocks",
  "keywords": [
    "express",
    "async",
    "error-handling",
    "middleware",
    "typescript",
    "express-middleware",
    "async-await",
    "error-boundary",
    "promise-handling"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "build:prod": "yarn clean && tsc -p tsconfig.prod.json && npm run minify",
    "minify": "node scripts/minify.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "dev": "ts-node examples/basic.ts",
    "prepublishOnly": "npm run build && npm run test",
    "clean": "rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nexus-aissam/express-async-super.git"
  },
  "homepage": "https://github.com/nexus-aissam/express-async-super#readme",
  "bugs": {
    "url": "https://github.com/nexus-aissam/express-async-super/issues"
  },
  "author": "Aissam <aissamirhir@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js"
    }
  },
  "sideEffects": false,
  "peerDependencies": {
    "express": "^4.18.0 || ^5.0.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "express": "^4.18.0",
    "jest": "^29.5.0",
    "supertest": "^6.3.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  }
}
